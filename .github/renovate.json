{
  "extends": [
    "config:recommended",
    "config:best-practices",
    ":automergeStableNonMajor",
    ":automergePatch",
    ":automergeDigest",
    ":group:allNonMajor"
  ],
  "patch": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "pinDigest": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "homeassistant/home-assistant"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "matchUpdateTypes": [
          "major",
          "minor",
          "patch"
      ],
      "postUpgradeTasks": {
        "commands": [
          "sed \"s|^version: .*$|version: $(npx -q -y -- semver -c -l {{{newVersion}}})|\" -i balena.yml"
        ],
        "fileFilters": [
          "balena.yml"
        ],
        "executionMode": "update"
      }
    }
  ]
}
